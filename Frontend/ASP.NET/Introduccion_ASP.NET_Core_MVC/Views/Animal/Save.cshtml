@using Introduccion_ASP.NET_Core_MVC.Models.ViewModel
@model AnimalesViewModel

@{
    if (string.IsNullOrEmpty(Model.Animal.NombreAnimal))
        ViewData["Title"] = "Añadir";
    else
        ViewData["Title"] = "Editar";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/Animal.css" />

<h1 class="text-center">@ViewData["Title"] un Animal</h1>

<div class="container mt-5">
    <form asp-action="SaveAnimal" asp-controller="Animal" method="post" class="mt-4">
        <!-- Campos ocultos para el ID del Animal -->
        <input type="hidden" asp-for="@Model.Animal.IdAnimal" />

        <!-- Nombre -->
        <div class="mb-3">
            <label asp-for="@Model.Animal.NombreAnimal" class="form-label">Nombre del Animal</label>
            <input asp-for="@Model.Animal.NombreAnimal" class="form-control" placeholder="Ingrese el nombre" required>
        </div>
        <!-- Raza -->
        <div class="mb-3">
            <label asp-for="@Model.Animal.Raza" class="form-label">Raza</label>
            <input asp-for="@Model.Animal.Raza" class="form-control" placeholder="Ingrese la raza">
        </div>
        <!-- Tipo de Animal -->
        <div class="mb-3">
            <label asp-for="@Model.Animal.RIdTipoAnimal" class="form-label">Tipo de Animal</label>
            <select asp-for="@Model.Animal.RIdTipoAnimal" class="form-select" required>
                <option value="" selected disabled></option>
                @foreach (var item in Model.ListTipoAnimal)
                {
                    <option value="@item.IdTipoAnimal"
                            selected="@(item.IdTipoAnimal == Model.Animal.RIdTipoAnimal)">
                        @item.TipoDescripcion
                    </option>
                }
            </select>
        </div>
        <!-- Fecha de Nacimiento -->
        <div class="mb-3">
            <label asp-for="@Model.Animal.FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input asp-for="@Model.Animal.FechaNacimiento" class="form-control" type="date">
        </div>
        <!-- Botones -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <a asp-action="Index" asp-controller="Animal" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
