@using Introduccion_ASP.NET_Core_MVC.Models.ViewModel
@model AnimalesViewModel

@{
    ViewData["Title"] = "Add";
    Animal animalToAdd = new Animal();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/Animal.css" />

<h1>Añadir un Animal</h1>

<div class="container mt-5">
    <h1 class="text-center">Registrar Nuevo Animal</h1>
    <form asp-action="AddAnimal" asp-controller="Animal" method="post" class="mt-4">
        <!-- Nombre -->
        <div class="mb-3">
            <label asp-for="@animalToAdd.NombreAnimal" class="form-label"></label>
            <input asp-for="@animalToAdd.NombreAnimal" class="form-control" placeholder="Ingrese el nombre" required>
        </div>
        <!-- Raza -->
        <div class="mb-3">
            <label asp-for="@animalToAdd.Raza" class="form-label"></label>
            <input asp-for="@animalToAdd.Raza" class="form-control" placeholder="Ingrese la raza">
        </div>
        <!-- Tipo de Animal -->
        <div class="mb-3">
            <label asp-for="@animalToAdd.RIdTipoAnimal" class="form-label"></label>
            <select asp-for="@animalToAdd.RIdTipoAnimal" class="form-select" required>
                <option value="" selected disabled>Seleccione el tipo</option>
                @foreach (var item in Model.ListTipoAnimal)
                {
                    <option value="@item.IdTipoAnimal">@item.TipoDescripcion</option>
                }
            </select>
        </div>
        <!-- Fecha de Nacimiento -->
        <div class="mb-3">
            <label asp-for="@animalToAdd.FechaNacimiento" class="form-label"></label>
            <input asp-for="@animalToAdd.FechaNacimiento" class="form-control" type="date">
        </div>
        <!-- Botones -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <button type="reset" class="btn btn-secondary">Limpiar</button>
        </div>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>