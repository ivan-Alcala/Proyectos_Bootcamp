@using Introduccion_ASP.NET_Core_MVC.Models.ViewModel
@model AnimalesViewModel

@{
    ViewData["Title"] = "Add";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/Animal.css" />

<h1>Añadir un Animal</h1>

<div class="container mt-5">
    <h1 class="text-center">Registrar Nuevo Animal</h1>
    <form id="animalForm" action="/save-animal" method="post" class="mt-4">
        <!-- Nombre -->
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre del Animal</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ingrese el nombre" required>
        </div>
        <!-- Raza -->
        <div class="mb-3">
            <label for="raza" class="form-label">Raza</label>
            <input type="text" class="form-control" id="raza" name="raza" placeholder="Ingrese la raza">
        </div>
        <!-- Tipo de Animal -->
        <div class="mb-3">
            <label for="tipoAnimal" class="form-label">Tipo de Animal</label>
            <select class="form-select" id="tipoAnimal" name="tipoAnimal" required>
                <option value="" selected disabled>Seleccione el tipo</option>
                @{
                    foreach (var item in Model.ListTipoAnimal)
                    {
                        <option value="@item.IdTipoAnimal">@item.TipoDescripcion</option>
                    }
                }
            </select>
        </div>
        <!-- Fecha de Nacimiento -->
        <div class="mb-3">
            <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento">
        </div>
        <!-- Botones -->
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            <button type="reset" class="btn btn-secondary">Limpiar</button>
        </div>
    </form>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>